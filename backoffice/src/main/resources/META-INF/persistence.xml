<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="scholar" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

    <class>com.codemovers.scholar.v1.backoffice.db.entities.GeneralAccounts</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.Person</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.Permissions</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.RolePermission</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.Contacts</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.Users</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.Addresses</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.UserRole</class>
    <class>com.codemovers.scholar.v1.backoffice.db.entities.Roles</class>
    <properties>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/scholar-backoffice?zeroDateTimeBehavior=convertToNull"/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.password" value="mysql"/>
        <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
        <!--        <property name="javax.persistence.schema-generation.database.action" value="create"/>
        -->
    </properties>
  </persistence-unit>
</persistence>
